@page "{searchString?}"
@model RazorPageWebApp.Pages.Tickets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="btn btn-primary">
    <a class="form-group" asp-page="Create">Create</a>
</div>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        All Tickets
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].Title)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Ticket[0].EmpID)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].Comment)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Ticket[0].CommentTime)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].Open)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].OpenDate)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Ticket[0].ClosedDate)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.Ticket[0].Location)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Ticket)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.EmpID)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Comment)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.CommentTime)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Open)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OpenDate)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.ClosedDate)
                                </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.Location)
                            </td>
                            <td>
                                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>